@model Inmobiliaria_.Net_Core.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}


<h4>Eliminar Pago</h4>

<h6>¿Seguro que desea eliminar el pago?</h6>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Numero de Pago
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NroPago)
        </dd>
        <dt class="col-sm-2">
            Direccion Alquiler
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alquiler.Inmueble.Direccion)
        </dd>
        <dt class="col-sm-2">
            Inquilino
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Alquiler.Inquilino.Apellido)
            @Html.DisplayFor(model => model.Alquiler.Inquilino.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Importe)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.Importe)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Volver al listado</a>
    </form>
</div>

